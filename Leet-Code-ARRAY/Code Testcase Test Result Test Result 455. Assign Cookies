class Solution {
public:
    int findContentChildren(vector<int>& g, vector<int>& s) {
        sort(g.begin(), g.end());
        sort(s.begin(), s.end());
        
        int i = 0, j = 0;     // i -> child, j -> cookie
        int count = 0;

        while (i < g.size() && j < s.size()) {
            if (s[j] >= g[i]) {  // cookie satisfies the child
                count++;
                i++; 
                j++;
            } else {
                j++;  // cookie too small â†’ try next cookie
            }
        }

        return count;
    }
};
