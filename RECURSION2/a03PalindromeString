//Palindrome in String using Recursion
#include<iostream>
#include<string>
using namespace std;
bool isPalindrome(string s , int i,int j){
    //Base Case
    if(i>j) return true;
    if(s[i]!=s[j]) return false;
    else return isPalindrome(s,i+1,j-1);
    // int i=0;
    // int j=s.length()-1;
    // while(i<j){
    //     if(s[i]!=s[j]) return false;
    //     i++;
    //     j--;
    // }
}
int main()
{
    string s = "ABA";
    cout<<isPalindrome(s,0,s.length()-1);
}
// ***OUTPUT***
// 1
