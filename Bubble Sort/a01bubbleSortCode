// Bubble Sort
#include<iostream>
using namespace std;
int main(){
    int arr[6]={5,4,6,3,2,1};
    int n = 6;
    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";

    }
    // bubble sort
    for(int i=0;i<n-1;i++){//n-1 passes
      // traverse
      for(int j=0;j<n-1;j++){
        if(arr[j]>arr[j+1]){
            swap(arr[i],arr[j+1]);
        }
      }
    }
    cout<<endl;
    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }
}
// ***OUTPUT***
// 5 4 6 3 2 1 
// 1 2 3 4 5 6 
