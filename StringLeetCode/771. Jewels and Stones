class Solution {
public:
    int numJewelsInStones(string jewels, string stones) {
        bool isJewel[128] = {false};
        
        // Mark each jewel type
        for(int i = 0; i < jewels.size(); i++) {
            isJewel[jewels[i]] = true;
        }

        int count = 0;
        // Count stones that are jewels
        for(int i = 0; i < stones.size(); i++) {
            if(isJewel[stones[i]]) {
                count++;
            }
        }

        return count;
    }
};
