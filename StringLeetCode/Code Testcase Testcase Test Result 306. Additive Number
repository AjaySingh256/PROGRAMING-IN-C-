class Solution {
public:
    // String addition
    string add(string a, string b) {
        string res = "";
        int i = a.size() - 1, j = b.size() - 1, carry = 0;

        while (i >= 0 || j >= 0 || carry) {
            int sum = carry;
            if (i >= 0) sum += a[i--] - '0';
            if (j >= 0) sum += b[j--] - '0';

            res.push_back((sum % 10) + '0');
            carry = sum / 10;
        }

        reverse(res.begin(), res.end());
        return res;
    }

    bool dfs(string num, int start, string prev1, string prev2) {
        if (start == num.size())
            return true;

        string sum = add(prev1, prev2);
        int len = sum.size();

        if (start + len > num.size()) return false;
        if (num.substr(start, len) != sum) return false;

        return dfs(num, start + len, prev2, sum);
    }

    bool isAdditiveNumber(string num) {
        int n = num.size();

        for (int i = 1; i <= n - 2; i++) {
            for (int j = i + 1; j <= n - 1; j++) {
                string a = num.substr(0, i);
                string b = num.substr(i, j - i);

                // Leading zero check
                if ((a.size() > 1 && a[0] == '0') ||
                    (b.size() > 1 && b[0] == '0'))
                    continue;

                if (dfs(num, j, a, b))
                    return true;
            }
        }
        return false;
    }
};
