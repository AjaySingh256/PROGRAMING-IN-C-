class Solution {
public:
    string licenseKeyFormatting(string s, int k) {
        string temp = "";

        // Step 1: Remove dashes & convert to uppercase
        for (char c : s) {
            if (c != '-') {
                temp += toupper(c);
            }
        }

        string result = "";
        int count = 0;

        // Step 2: Build result from right to left
        for (int i = temp.size() - 1; i >= 0; i--) {
            result += temp[i];
            count++;

            if (count == k && i != 0) {
                result += '-';
                count = 0;
            }
        }

        // Step 3: Reverse to get correct order
        reverse(result.begin(), result.end());
        return result;
    }
};
