class Solution {
public:
    bool isPathCrossing(string path) {
        set<pair<int, int>> visited;
        
        int x = 0, y = 0;
        visited.insert({0, 0});   // starting point
        
        for (char ch : path) {
            if (ch == 'N') y++;
            else if (ch == 'S') y--;
            else if (ch == 'E') x++;
            else if (ch == 'W') x--;
            
            // check if already visited
            if (visited.count({x, y})) {
                return true;
            }
            
            visited.insert({x, y});
        }
        
        return false;
    }
};
