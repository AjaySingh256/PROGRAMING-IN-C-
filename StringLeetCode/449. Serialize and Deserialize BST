/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */

class Codec {
public:

    // SERIALIZE: Convert tree -> string (Level Order)
    string serialize(TreeNode* root) {
        if (!root) return "null";

        string result = "";
        queue<TreeNode*> q;
        q.push(root);

        while (!q.empty()) {
            TreeNode* node = q.front();
            q.pop();

            if (node) {
                result += to_string(node->val) + ",";
                q.push(node->left);
                q.push(node->right);
            } else {
                result += "null,";
            }
        }
        return result;
    }

    // DESERIALIZE: Convert string -> tree
    TreeNode* deserialize(string data) {
        if (data == "null") return NULL;

        vector<string> nodes;
        string temp = "";

        // split by comma
        for (char c : data) {
            if (c == ',') {
                nodes.push_back(temp);
                temp = "";
            } else {
                temp += c;
            }
        }

        TreeNode* root = new TreeNode(stoi(nodes[0]));
        queue<TreeNode*> q;
        q.push(root);

        int i = 1;
        while (!q.empty() && i < nodes.size()) {
            TreeNode* parent = q.front();
            q.pop();

            // process left child
            if (nodes[i] != "null") {
                parent->left = new TreeNode(stoi(nodes[i]));
                q.push(parent->left);
            }
            i++;

            // process right child
            if (i < nodes.size() && nodes[i] != "null") {
                parent->right = new TreeNode(stoi(nodes[i]));
                q.push(parent->right);
            }
            i++;
        }

        return root;
    }
};
